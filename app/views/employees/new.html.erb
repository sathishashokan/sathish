<html>
<head>
    <style type="text/css">
        html {
            font-family: system-ui;
        }
        h1 {
            display: flex;
            justify-content: center;
            color: white;
            padding: 10px 20px;
            background: black;
            border-radius: 6px;
        }
        form {
            margin: 40px 40px;
            padding: 40px 40px;
            background: #D6D7D7; 
            border-radius: 6px;
        }

        #div2 {
            display: flex;
        }

        div {
            flex-wrap: wrap;
            font-size: 20px;
            font-weight: bold;
        }

        .large-text-field {
            font-size: 20px;
            border: 2px solid #C8C7C7;
            border-radius: 5px;
            margin: 10px 0px;
            padding: 20px 10px; 
            width: 350px; 
        }

        .large-text-field-1 {
            font-size: 20px;
            border: 2px solid #C8C7C7;
            border-radius: 5px;
            margin: 10px 0px;
            padding: 20px 10px; 
            width: 600px;
        }

        .large-text-field-2 {
            font-size: 20px;
            border: 2px solid #C8C7C7;
            border-radius: 5px;
            margin: 10px 0px;
            padding: 20px 10px; 
            width: 400px;
        }

        .button {
            border: 2px solid #09AAEA;
            border-radius: 5px;
            background-color: #09AAEA;
            width: 150px;
            margin: 20px 0px;
            padding: 10px 20px;
            font-size: 20px;
            color: white;
            text-decoration: none;
        }

        .button:hover {
            cursor: pointer;
            background: white;
            color: #09AAEA;
        }
    </style>
</head>
<body>
<h1>Create new employee</h1>
<%= form_with url: "/employees", method: :post do |form| %>
    <div id="div1">
        <div id="div2">
            <div>
                <%= form.label :first_name %><br>
                <%= form.text_field :first_name, required: :true, class: 'large-text-field' %>
            </div>
            <div>
                <%= form.label :last_name %><br>
                <%= form.text_field :last_name, required: :true, class: 'large-text-field' %>
            </div>
            <div>
                <%= form.label :email %><br>
                <%= form.text_field :email, required: :true, class: 'large-text-field' %>
            </div>
        </div>
        <div id="div2">
            <div>
                <%= form.label :designation %><br>
                <%= form.text_field :designation, required: :true, class: 'large-text-field-1' %>
            </div>
            <div>
                <%= form.label :department %><br>
                <%= form.collection_select :department, Department.all, :id, :name, {}, class: 'large-text-field-2' %>
            </div>
        </div>
    </div>
    <div>
        <%= form.submit "Create", class: 'button'%>
    </div>
<% end %>
<div class='div_button'>
    <%= link_to 'Back', employees_path, class: 'button' %>
    <%= link_to 'Home', root_path, class: 'button' %>
</div>
</body>
</html>